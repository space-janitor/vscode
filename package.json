{
	"name": "sj-vscode",
	"displayName": "sj-vscode",
	"description": "Space Janitor VSCode extension",
	"publisher": "SpaceJanitor",
	"version": "0.0.1",
	"readme": "README.md",
	"markdown": "standard",
	"license": "MIT",
	"author": {
		"name": "Carlos A. Betancourt",
		"email": "carlos@betancourtca.net"
	},
	"repository": {
		"type": "GitHub",
		"url": "https://github.com/space-janitor/vscode"
	},
	"galleryBanner": {
		"color": "#000000",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Formatters",
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Space Janitor configuration",
			"properties": {
				"sj-vscode.DataFolder": {
					"type": "string",
					"default": null,
					"description": "Space Janitor data folder"
				}
			}
		},
		"commands": [
			{
				"command": "common.testLogger",
				"title": "Test Log4JS logger.",
				"category": "Space Janitor common"
			},
			{
				"command": "common.addDataFolderToWorkspace",
				"title": "Add Space Janitor Data Folder to workspace.",
				"category": "Space Janitor common"
			},
			{
				"command": "common.setDataFolder",
				"title": "Set data folder",
				"category": "Space Janitor common"
			},
			{
				"command": "common.debug",
				"title": "debug",
				"category": "Space Janitor common"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "common.addDataFolderToWorkspace",
					"when": "explorerViewletFocus == true"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.11",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"tslint": "^5.20.1",
		"typescript": "^3.7.3",
		"vscode-test": "^1.2.2",
		"grunt": "^1.0.4"
	},
	"dependencies": {
		"@space-janitor/common": "0.0.2",
		"log4js": "^6.0.0",
		"pkg-dir": "^4.2.0"
	}
}
